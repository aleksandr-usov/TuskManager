<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/bg_list_elemt"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="12dp"
    android:elevation="2dp">

    <View
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:id="@+id/v_category_element"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_task_icon"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_suit_case"
        app:layout_constraintStart_toStartOf="@+id/v_category_element"
        app:layout_constraintTop_toTopOf="@+id/v_category_element"
        app:layout_constraintEnd_toEndOf="@+id/v_category_element"
        app:layout_constraintBottom_toTopOf="@+id/tv_title"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B78A17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_task_icon"
        app:layout_constraintEnd_toEndOf="@+id/v_category_element"
        app:layout_constraintBottom_toBottomOf="@+id/v_category_element"
        tools:text="Work" />

</androidx.constraintlayout.widget.ConstraintLayout>
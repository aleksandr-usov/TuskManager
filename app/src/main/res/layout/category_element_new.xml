<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:background="@drawable/bg_list_elemt"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="12dp"
    android:elevation="2dp">

    <View
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:id="@+id/v_category_element_new"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_task_icon_new"
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:tint="#179AB7"
        android:scaleY="2"
        android:scaleX="2"
        app:layout_constraintStart_toStartOf="@+id/v_category_element_new"
        app:layout_constraintTop_toTopOf="@+id/v_category_element_new"
        app:layout_constraintEnd_toEndOf="@+id/v_category_element_new"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_new"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#807F7F"
        android:textSize="14sp"
        android:text="@string/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_task_icon_new"
        app:layout_constraintEnd_toEndOf="@+id/v_category_element_new"
        app:layout_constraintBottom_toBottomOf="@+id/v_category_element_new" />

</androidx.constraintlayout.widget.ConstraintLayout>